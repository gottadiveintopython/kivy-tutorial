    "version": "0.2.0",
    "configurations": [
        {
            "name": "pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}"],
            "env": {"KIVY_EVENTLOOP": "trio"}
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "main.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/src/main.py",
            "console": "integratedTerminal"
        }
    ]
}
